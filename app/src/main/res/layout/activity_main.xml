<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg3"
        android:orientation="horizontal"



        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Lost and Found"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold">

        </TextView>


    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img1"
        android:padding="5dp"
        android:src="@drawable/download"
        android:id="@+id/logo">

    </ImageView>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/ltxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="60dp"
                android:clickable="true"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/rtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:clickable="true"

                android:text="Register"
                android:textColor="@color/black"
                android:textSize="22dp"

                android:textStyle="bold"

                >

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bg4">

        </LinearLayout>


        <ImageView
            android:id="@+id/profileimg"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_marginTop="5dp"


            android:scaleType="centerCrop"
            android:src="@drawable/profile"

            android:visibility="gone">

        </ImageView>

        <Button
            android:id="@+id/addimgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:background="@drawable/bg5"
            android:padding="10dp"
            android:text="Add profile image"
            android:textColor="@color/white"
            android:visibility="gone">

        </Button>

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:background="@drawable/bg5"
            android:padding="10dp"
            android:text="next"
            android:textColor="@color/white"
            android:visibility="gone">

        </Button>


        <EditText
            android:id="@+id/ul"
            android:layout_width="250dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="20dp"
            android:background="@drawable/bg1"


            android:enabled="true"
            android:hint="IIT Patna email"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_black">

        </EditText>

        <EditText
            android:id="@+id/pl"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:background="@drawable/bg1"
            android:hint="Password"
            android:inputType="textPassword"

            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_black">


        </EditText>

        <Button
            android:id="@+id/lbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:background="@drawable/btnbg"

            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white">

        </Button>

        <TextView
            android:id="@+id/confirmtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="A confirmation link has been sent to your email"
            android:textColor="@color/light_black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone">

        </TextView>


        <EditText
            android:id="@+id/ur"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:background="@drawable/bg1"
            android:hint="Full Name"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_black"
            android:visibility="gone">

        </EditText>

        <EditText
            android:id="@+id/re"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:background="@drawable/bg1"
            android:hint="IIT Patna email"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_black"
            android:visibility="gone">

        </EditText>

        <EditText
            android:id="@+id/roll"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:background="@drawable/bg1"
            android:hint="Roll number"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_black"
            android:visibility="gone">

        </EditText>

        <EditText
            android:id="@+id/rnum"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:background="@drawable/bg1"
            android:hint="Phone"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_black"
            android:visibility="gone">

        </EditText>

        <EditText
            android:id="@+id/rp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:background="@drawable/bg1"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_black"
            android:visibility="gone">

        </EditText>

        <EditText
            android:id="@+id/rpc"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:background="@drawable/bg1"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/light_black"
            android:visibility="gone">

        </EditText>

        <Button
            android:id="@+id/rbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:background="@drawable/btnbg"
            android:text="Register"

            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone">

        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Please wait"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:id="@+id/load1"
            android:visibility="gone">

        </TextView>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Made with love in IIT Patna"
        android:textColor="@color/light_black"
        android:textStyle="bold">

    </TextView>


</RelativeLayout>